<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Bienvenidos a BMOL</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <%- include('partials/header') %>
        <main>
            <section class="slider">
                <ul>
                    <li><img src="images/bemol banners_Mesa de trabajo 1.jpg" alt=""></li>
                    <li><img src="images/bemol banners_Mesa de trabajo 1 copia.jpg" alt=""></li>
                    <li><img src="images/bemol banners_Mesa de trabajo 1 copia 3.jpg" alt=""></li>
                </ul>
            
            <form action="/products" method="POST" class="product-admi" enctype="multipart/form-data">
                <section class="personal-info">
                    <% if (typeof alert != 'undefined') { %>
                        <% alert.forEach(function(error) { %>
                            <p><%= error.msg %></p>
                        <% }) %>
                    <% } %>
 
                    <div>
                        <h3>Datos del titular</h3>
                    </div>

                    <div class="info">
                        <div>
                            <label for="name"><h1>Nombre</h1></label>

                            <input
                                type="text"
                                name="userName"
                                id="userName"
                                class="form-comtrol"
                            >
                        </div>

                        <div>
                            <label for="userLastName"><h1>Apellidos</h1></label>

                            <input
                                type="text"
                                name="userLastName"
                                id="userLastName"
                                class="form-comtrol"
                            >
                        </div>
                        
                        <div>
                            <label for="userEmail"><h1>Correo Electrónico</h1></label>

                            <input
                                type="text"
                                name="userEmail"
                                id="userEmail"
                                class="form-comtrol"
                            >
                        </div>
                      
                        <div>
                            <label for="userEmail"><h1>Confirma tu correo Electrónico</h1></label>

                            <input
                                type="text"
                                name="userEmail"
                                id="userEmail"
                                class="form-comtrol"
                            >
                        </div>
                        
                        <div>
                        <label for="userEmail"><h1>Contraseña</h1></label>

                        <input
                            type="text"
                            name="userEmail"
                            id="userEmail"
                            class="form-comtrol"
                            >
                        </div>
                        
                        <div>
                        <label for="userEmail"><h1>Confirma tu Contraseña</h1></label>

                        <input
                            type="text"
                            name="userEmail"
                            id="userEmail"
                            class="form-comtrol"
                            >
                        </div>

                        <div>
                            <label for="userImage"><h1>Imagen del Usuario</h1></label>
                            <input type="file" name="userImage" id="userImage">
                        </div>

                        <div>
                            <button type="submit">Inicio de Sesión</button>
                            <button type="submit">Continuar</button>
                        </div>
                    </div>
                </section>
            </form>
        </main>
        
        <%- include('partials/footer'); %>
    </body>
</html>