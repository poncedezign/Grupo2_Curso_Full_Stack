<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Bienvenidos a BMOL</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <%- include('partials/header') %>
        <main>
            <section class="slider">
            
            <form action="/products" method="POST" class="product-admi" enctype="multipart/form-data">
                <section class="personal-info">
                    <% if (typeof alert != 'undefined') { %>
                        <% alert.forEach(function(error) { %>
                            <p><%= error.msg %></p>
                        <% }) %>
                    <% } %>
 
                    <div>
                        <h3>Datos del titular</h3>
                    </div>
                    <div class="logo" id="logo">
                        <img src="/images/Vector.png" alt="Logo usuario">
                    <div class="info">
                        <div>
                            <label for="name"><h1>¡Te enviamos un correo con tu órden!</h1></label>

                            <input
                                type="text"
                                name="userName"
                                id="userName"
                                class="form-comtrol"
                            >
                        </div>

                        <div>
                            <button type="submit"><a href="/">Seguir Navegando</a></button>
                            <button type="submit">Continuar</button>
                        </div>
                    </div>
                </section>
            </form>
        </main>
        
        <%- include('partials/footer'); %>
    </body>
</html>